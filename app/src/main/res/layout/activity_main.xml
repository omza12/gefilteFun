<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center"
    android:layoutDirection="rtl">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="גפילטע פאן!"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="44sp"
        android:fontFamily="@font/mantova"
        android:textAlignment="center"
        android:id="@+id/app_title"
        android:layout_marginBottom="20dp"/>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        app:srcCompat="@drawable/gefilte"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/app_title"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="שיחון היכרות עם \n'חרדית מדוברת'"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="38sp"
        android:fontFamily="@font/mantova"
        android:textAlignment="center"
        android:id="@+id/app_info"
        android:layout_below="@id/imageView"
        android:layout_marginBottom="50dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="בחרו מאגר מילים:"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        android:fontFamily="@font/heebobold"
        android:textAlignment="center"
        android:id="@+id/voca_title"
        android:layout_below="@id/app_info"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttons_layout"
        android:orientation="vertical"
        android:layout_below="@id/voca_title"
        tools:ignore="UselessParent">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="140dp"
                android:layout_height="70dp"
                app:cornerRadius="105dp"
                android:backgroundTint="#68B7FF"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:text="חתונות"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/heebosemibold"
                android:id="@+id/wedding_btn"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                tools:ignore="HardcodedText" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="140dp"
                android:layout_height="70dp"
                app:cornerRadius="105dp"
                android:backgroundTint="#68B7FF"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:text="צנזורה"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/heebosemibold"
                android:id="@+id/censorship_btn"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                tools:ignore="HardcodedText" />

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="140dp"
                android:layout_height="70dp"
                app:cornerRadius="105dp"
                android:backgroundTint="#68B7FF"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:text="תפילות"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/heebosemibold"
                android:id="@+id/prairs_btn"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                tools:ignore="HardcodedText" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="140dp"
                android:layout_height="70dp"
                app:cornerRadius="105dp"
                android:backgroundTint="#68B7FF"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:text="עבודה"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/heebosemibold"
                android:id="@+id/dos_and_donts_btn"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>